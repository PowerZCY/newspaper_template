{
  "i18n": {
    "locales": ["en"],
    "defaultLocale": "en",
    "messageRoot": "messages"
  },
  "scan": {
    "include": ["src/**/*.{tsx,ts,jsx,js}"],
    "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.d.ts", "node_modules/**"]
  },
  "blog": {
    "mdxDir": "src/mdx/blog",
    "outputFile": "index.mdx",
    "metaFile": "meta.json",
    "iocSlug": "ioc",
    "prefix": "blog"
  },
  "output": {
    "logDir": "logs",
    "verbose": false
  },
  "architectureConfig": {
    ".": "RootProject",
    "newspaper": "模板配置",
    "BaseConfig.ts": "文本配置",
    "AIEditableContext.tsx": "AI编辑器上下文",
    "ai-editable.tsx": "AI对话框组件",
    "edit-cache": "AI对话消息缓存组件",
    "font.ts": "字体配置"
  }
}
